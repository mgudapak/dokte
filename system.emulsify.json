{
    "name": "dokte",
    "homepage": "https://github.com/mgudapak/dokte",
    "repository": "https://github.com/mgudapak/dokte.git",
    "structure": [
        {
            "name": "base",
            "description": "Base-level components used in virtually every higher-level component"
        },
        {
            "name": "atoms",
            "description": "Small components commonly used in higher-level components"
        }
    ],
    "variants": [
        {
            "platform": "drupal",
            "structureImplementations": [
                {
                    "name": "base",
                    "directory": "./components/00-base"
                },
                {
                    "name": "atoms",
                    "directory": "./components/01-atoms"
                }
            ],
            "directories": [
                {
                    "name": "defaults",
                    "path": "./components/00-base/defaults",
                    "destinationPath": "./components/00-base/defaults",
                    "description": "Contains scss files with global defaults"
                },
                {
                    "name": "mixins",
                    "path": "./components/00-base/mixins",
                    "destinationPath": "./components/00-base/mixins",
                    "description": "Contains useful mixins"
                },
                {
                    "name": "typography",
                    "path": "./components/00-base/typography",
                    "destinationPath": "./components/00-base/typography",
                    "description": "Contains typography system"
                },
                {
                    "name": "templates",
                    "path": "./templates",
                    "destinationPath": "./templates",
                    "description": "Contains Drupal templates"
                }
            ],
            "files": [
                {
                    "name": "style",
                    "path": "./components/style.scss",
                    "destinationPath": "./components/style.scss",
                    "description": "Primary style scss file"
                },
                {
                    "name": "base",
                    "path": "./components/00-base/base.scss",
                    "destinationPath": "./components/00-base/base.scss",
                    "description": "Aggregated base file"
                },
                {
                    "name": "atoms",
                    "path": "./components/01-atoms/atoms.scss",
                    "destinationPath": "./components/01-atoms/atoms.scss",
                    "description": "Aggregated atoms file"
                }
            ],
            "components": [
                {
                    "name": "colors",
                    "structure": "base",
                    "required": true,
                    "dependency": []
                },
                {
                    "name": "typography",
                    "structure": "base",
                    "required": true,
                    "dependency": []
                },
                {
                    "name": "buttons",
                    "structure": "atoms",
                    "required": true,
                    "dependency": []
                },
                {
                    "name": "form-fields",
                    "structure": "atoms",
                    "required": true,
                    "dependency": []
                },
                {
                    "name": "images",
                    "structure": "atoms",
                    "required": true,
                    "dependency": []
                },
                {
                    "name": "links",
                    "structure": "atoms",
                    "required": true,
                    "dependency": []
                },
                {
                    "name": "lists",
                    "structure": "atoms",
                    "required": true,
                    "dependency": []
                },
                {
                    "name": "logo",
                    "structure": "atoms",
                    "required": true,
                    "dependency": []
                },
                {
                    "name": "tables",
                    "structure": "atoms",
                    "required": true,
                    "dependency": []
                },
                {
                    "name": "text",
                    "structure": "atoms",
                    "required": true,
                    "dependency": []
                }
            ]
        }
    ]
}
