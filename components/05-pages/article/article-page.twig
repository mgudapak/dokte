    </div>

    <div class="article__footer">
      <div class="article__meta">
        {% for key, badges in content['related-badges'] %}
          <div class="meta__group">
            <h3 class="group-title">{{ key }}</h3>
            <div class="group-badges">
              {% for badge in badges %}
                {% include "@molecules/badge/badge.twig" with {
                  badges: {
                    badge: {
                      type: key,
                      label: badge,
                    },
                  },
                } %}
              {% endfor %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
{% endblock %}

{% block page_footer %}

  <div class="grid-container">
    {# Related or Recommended Articles #}
    <div class="related-articles">
      <h2 class="block-title">Recommended Articles</h2>
      {% for related in content['related-articles'] %}
        {% include "@molecules/card/card.twig" with {
          card__variant: 'article_teaser',
          article__data: related,
        } %}

        {# @TODO: turn this into a UI element #}
        <div class="divider-block"></div>
      {% endfor %}
    </div>
  </div>
